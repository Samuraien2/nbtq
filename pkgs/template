# Template file for 'nbtq'
pkgname=nbtq
version=0.3
revision=1
build_style=template
hostmakedepends="pkg-config"
makedepends="zlib-devel"
short_desc="Simple but powerful cli tool to query and convert NBT Data"
maintainer="Samuraien2"
license="MIT"
homepage="https://github.com/Samuraien2/nbtq"
distfiles="https://github.com/Samuraien2/nbtq/archive/refs/tags/${version}.tar.gz"
checksum=SKIP

do_build() {
	${CC} nob.c -o nob
	./nob
}

do_install() {
	vbin nbtq
	vlicense LICENSE
	vdoc README.md
}
